{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@astaria/presence": ["./packages/presence/index.ts"],
      "@astaria/core": ["./packages/core/index.ts"],
      "@astaria/visually-hidden/astro": [
        "./packages/visually-hidden/src/astro.ts"
      ],
      "@astaria/visually-hidden/hybrids": [
        "./packages/visually-hidden/src/hybrids.ts"
      ],
      "@astaria/accessible-icon": ["./packages/accessible-icon/index.ts"],
      "@astaria/accordion": ["./packages/accordion/index.ts"],
      "@astaria/avatar": ["./packages/avatar/index.ts"],
      "@astaria/portal": ["./packages/portal/index.ts"],
      "@astaria/focus-scope": ["./packages/focus-scope/index.ts"],
      "@astaria/direction": ["./packages/direction/index.ts"],
      "@astaria/placeholder": ["./packages/placeholder/index.ts"]
    }
  }
}
