{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@astaria/presence": ["./packages/presence/index.ts"],
      "@astaria/core": ["./packages/core/index.ts"],
      "@astaria/visually-hidden/astro": [
        "./packages/visually-hidden/src/astro.ts"
      ],
      "@astaria/visually-hidden/hybrids": [
        "./packages/visually-hidden/src/hybrids.ts"
      ],
      "@astaria/accessible-icon/astro": [
        "./packages/accessible-icon/src/astro.ts"
      ],
      "@astaria/accessible-icon/hybrids": [
        "./packages/accessible-icon/src/hybrids.ts"
      ],
      "@astaria/accordion": ["./packages/accordion/index.ts"],
      "@astaria/avatar/astro": ["./packages/avatar/src/astro.ts"],
      "@astaria/avatar/hybrids": ["./packages/avatar/src/hybrids.ts"],
      "@astaria/portal": ["./packages/portal/index.ts"],
      "@astaria/focus-scope": ["./packages/focus-scope/index.ts"],
      "@astaria/direction/astro": ["./packages/direction/src/astro.ts"],
      "@astaria/direction/hybrids": ["./packages/direction/src/hybrids.ts"],
      "@astaria/placeholder": ["./packages/placeholder/index.ts"]
    }
  }
}
