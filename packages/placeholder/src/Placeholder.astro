---
import type { HTMLAttributes } from "astro/types";
import type { PlaceholderProps } from "./Placeholder";

type Props = PlaceholderProps & HTMLAttributes<"div">;

const props = Astro.props;
---

<astaria-placeholder {...props}> <slot /></astaria-placeholder>

<script>
  import Placeholder from "./Placeholder.ts";

  customElements.define("astaria-placeholder", Placeholder);
</script>
