---
import type { HTMLAttributes } from "astro/types";
import VisuallyHidden from "@astaria/visually-hidden";

// Write your component code in this file!
export type AccessibleIconProps = HTMLAttributes<"slot"> & {
  label?: string;
};

const { label, ...props }: AccessibleIconProps = Astro.props;
---

<slot {...props} aria-hidden="true" tabindex="-1" />
{label && <VisuallyHidden>{label}</VisuallyHidden>}
