---
import type { HTMLAttributes } from "astro/types";
import { AvatarComponentNames } from "./constants/names";

interface Props extends HTMLAttributes<"div"> {}

const Primitive = AvatarComponentNames.AvatarRoot;

const { ...rest } = Astro.props;
---

<template id="astaria-avatar-root-template">
  <slot part="root-slot" />
</template>

<Primitive {...rest}>
  <slot />
</Primitive>

<script src="./lib/AvatarRoot.script.ts"></script>
