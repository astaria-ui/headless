---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div"> {
  ratio?: number;
}

const { ratio = 1, ...props } = Astro.props;
---

<astaria-aspect-ratio {ratio}>
  <slot />
</astaria-aspect-ratio>

<script>
  import { AspectRatioCompiled } from "./AspectRatio.hybrids";
  if (!customElements.get("astaria-aspect-ratio"))
    customElements.define("astaria-aspect-ratio", AspectRatioCompiled);
</script>
